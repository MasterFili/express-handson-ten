<h1>Add a new post!</h1>
<form action="/post" method="POST">
    <div>
        <label for="name">Name: </label>
        <input type="text" name="name">
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>

{{#each posts}}
<ul>{{PostTitle}}</ul>
{{/each}}